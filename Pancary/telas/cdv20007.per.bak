l   = FORMONLY.dat_inclusao TYPE DATE;

m   = FORMONLY.dat_vencto TYPE DATE;

n   = FORMONLY.val_desp_terceiro TYPE DECIMAL(17,2);

o   = FORMONLY.observacao TYPE CHAR, UPSHIFT;

tp  = FORMONLY.tot_ipi, AUTONEXT;
tc  = FORMONLY.tot_icms, AUTONEXT;

p   = FORMONLY.tot_desp_terceiro TYPE DECIMAL(17,2), NOENTRY;

ci  = FORMONLY.cod_item, UPSHIFT, AUTONEXT
      --# ,WIDGET='FIELD_BMP', CONFIG='combo.bmp Control-z',OPTIONS='-nolist';
di  = FORMONLY.den_item, UPSHIFT, NOENTRY;
qi  = FORMONLY.qtd_item, AUTONEXT;
ipi = FORMONLY.pct_ipi, AUTONEXT;
pi  = FORMONLY.pre_unit, AUTONEXT;
ti  = FORMONLY.val_tot, NOENTRY;
END

INSTRUCTIONS
   SCREEN RECORD sa_item[3] (cod_item THRU val_tot);
