ATTRIBUTES
zz  = FORMONLY.empresa TYPE CHAR, UPSHIFT, NOENTRY;

a   = FORMONLY.controle TYPE DECIMAL, UPSHIFT, NOENTRY;

b   = FORMONLY.viagem TYPE INTEGER, NOENTRY;

x   = formonly.viagem_origem TYPE INTEGER, NOENTRY;

t   = FORMONLY.tip_docum, NOENTRY;

ad  = FORMONLY.ad_terceiro TYPE DECIMAL(6,0), NOENTRY;

d   = FORMONLY.previsao TYPE CHAR, UPSHIFT, NOENTRY;

ap  = FORMONLY.ap_terceiro TYPE DECIMAL(6,0), NOENTRY;
ar  = FORMONLY.num_ar TYPE DECIMAL(6,0), NOENTRY;

q   = FORMONLY.sequencia TYPE SMALLINT, NOENTRY;

f1  = FORMONLY.ativ TYPE CHAR
--#, WIDGET="FIELD_BMP", CONFIG="combo.bmp Control-z"
;

f2  = FORMONLY.des_ativ TYPE CHAR, UPSHIFT, NOENTRY;

g1  = FORMONLY.tip_despesa TYPE DECIMAL
--#, WIDGET="FIELD_BMP", CONFIG="combo.bmp Control-z"
;

g2  = FORMONLY.des_tip_despesa TYPE CHAR, UPSHIFT, NOENTRY;

h   = FORMONLY.nota_fiscal TYPE DECIMAL(7,0);

i   = FORMONLY.serie_nota_fiscal TYPE CHAR, UPSHIFT;

j   = FORMONLY.subserie_nf TYPE DECIMAL(2,0);

es  = FORMONLY.ies_especie, UPSHIFT, AUTONEXT;

k1  = FORMONLY.fornecedor TYPE CHAR, UPSHIFT
