
create table laudo_mest_petrom 
  (
    cod_empresa char(2) not null ,
    num_laudo decimal(6,0) not null ,
    num_om decimal(6,0),
    num_nff decimal(6,0),
    cod_item char(15),
    cod_item_petrom char(15),
    dat_emissao date not null ,
    cod_cliente char(15),
    lote_tanque char(10) not null ,
    qtd_laudo decimal(12,3) not null ,
    tipo char(2),
    nota_emitida char(1) not null ,
    laudo_bloqueado char(1) not null ,
    texto_1 char(50),
    texto_2 char(50),
    texto_3 char(50),
    usuario_desbl char(8),
    dat_desbloq date,
    cod_transport char(15),
    ser_nff char(3) not null ,
    ies_es  char(01)


  );

create unique index ix_laudo_mest_1 on laudo_mest_petrom 
    (cod_empresa,num_laudo);