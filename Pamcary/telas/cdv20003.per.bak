ATTRIBUTES
zz  = FORMONLY.empresa TYPE CHAR, UPSHIFT, NOENTRY;
a   = FORMONLY.controle TYPE DECIMAL, UPSHIFT, AUTONEXT, NOENTRY
;
b   = FORMONLY.viagem TYPE INTEGER, AUTONEXT, NOENTRY
;
c   = FORMONLY.preco_km TYPE DECIMAL(12,2), NOENTRY;
e1  = FORMONLY.ativ TYPE CHAR, AUTONEXT
--#, WIDGET="FIELD_BMP", CONFIG="combo.bmp Control-z"
;
e2  = FORMONLY.des_ativ TYPE CHAR, UPSHIFT, NOENTRY;
d1  = FORMONLY.tipo_despesa_km TYPE DECIMAL, AUTONEXT
--#, WIDGET="FIELD_BMP", CONFIG="combo.bmp Control-z"
;
d2  = FORMONLY.des_tip_desp_km TYPE CHAR, UPSHIFT, NOENTRY;
e3  = FORMONLY.trajeto TYPE CHAR, UPSHIFT, AUTONEXT;
e4  = FORMONLY.placa TYPE CHAR, UPSHIFT, AUTONEXT, picture = "AAA-#A##";

e11  = FORMONLY.cidade_origem TYPE CHAR, AUTONEXT, UPSHIFT
--#, WIDGET="FIELD_BMP", CONFIG="combo.bmp Control-z"
;
e12  = FORMONLY.des_cidade_origem TYPE CHAR, UPSHIFT, NOENTRY;

e13  = FORMONLY.cidade_destino TYPE CHAR, AUTONEXT, UPSHIFT
--#, WIDGET="FIELD_BMP", CONFIG="combo.bmp Control-z"
;
e14 = FORMONLY.des_cidade_destino TYPE CHAR, UPSHIFT, NOENTRY;

e5  = FORMONLY.km_inicial TYPE DECIMAL(7,0), AUTONEXT;
e6  = FORMONLY.km_final TYPE DECIMAL(7,0), AUTONEXT;
e7  = FORMONLY.qtd_km TYPE DECIMAL(5,0), NOENTRY;
e8  = FORMONLY.val_km TYPE DECIMAL(8,2), NOENTRY;
e9  = FORMONLY.ad_km TYPE DECIMAL(6,0), NOENTRY;
e10 = FORMONLY.ap_km TYPE DECIMAL(6,0), NOENTRY;
f1  = FORMONLY.tipo_despesa_hr TYPE DECIMAL, AUTONEXT
--#, WIDGET="FIELD_BMP", CONFIG="combo.bmp Control-z"
;
f2  = FORMONLY.des_tip_desp_hr TYPE CHAR, UPSHIFT, AUTONEXT, NOENTRY;
f3  = FORMONLY.hor_inicial TYPE DATETIME HOUR TO SECOND, UPSHIFT, PICTURE="##:##:##", AUTONEXT;
f4  = FORMONLY.hor_final TYPE DATETIME HOUR TO SECOND, UPSHIFT, PICTURE="##:##:##", AUTONEXT;
f5  = FORMONLY.motivo TYPE CHAR, AUTONEXT
--#, WIDGET="FIELD_BMP", CONFIG="combo.bmp Control-z"
;
f6  = FORMONLY.des_motivo TYPE CHAR, UPSHIFT, NOENTRY;
f7  = FORMONLY.hor_diurnas TYPE CHAR, UPSHIFT, NOENTRY;
f8  = FORMONLY.hor_noturnas TYPE CHAR, UPSHIFT, NOENTRY;
f9  = FORMONLY.dat_apont_hor TYPE DATE, AUTONEXT;
f10 = FORMONLY.obs_apont_hor TYPE CHAR, UPSHIFT, AUTONEXT;
g   = FORMONLY.total_km TYPE DECIMAL(5,0), NOENTRY;
h   = FORMONLY.val_tot_km TYPE DECIMAL(8,2), NOENTRY;
i   = FORMONLY.tot_hor_diurnas TYPE CHAR, UPSHIFT, PICTURE="##:##:##", NOENTRY;
j   = FORMONLY.tot_hor_noturnas TYPE CHAR, UPSHIFT, PICTURE="##:##:##", NOENTRY;
END

INSTRUCTIONS
  SCREEN RECORD s_desp_km[02] (FORMONLY.ativ THRU FORMONLY.obs_apont_hor)
END

