create table tirolez_clientes 
  (
    cod_cliente char(15) not null ,  
    cod_ean char(14),
    cod_setor char(2),
    cod_zona char(2),
    cod_roteiro char(3),
    cod_empresa char(2),
    desc_finan decimal(7,3),
    cod_seguimento char(1),
    cod_tip_perueiro char(1),
    ies_tip_desc char(1),
    cod_ean1 char(14),
    aceita_um_terco char(1),
    preco_flag char(1),
    par_txt    char(250)
  );

create unique index ix_tirolez_clientes on tirolez_clientes 
    (cod_empresa,cod_cliente,cod_ean) using btree ;


