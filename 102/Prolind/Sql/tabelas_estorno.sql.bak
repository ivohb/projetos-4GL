create table processo_apont_1054 (
 cod_empresa    char(02) not null,
 usuario        char(08) not null,
 dat_processo   char(20) not null,
 num_processo   integer not null,
 ies_estornado  char(01) not null,
 num_ordem      integer,
 qtd_boas       decimal(10,3),
 qtd_refug      decimal(10,3),
 primary key (cod_empresa, usuario, dat_processo)
);


create table trans_apont_1054 (
 cod_empresa    char(02) not null,
 num_processo   integer not null,
 num_transac    integer not null,
 num_seq_apont  integer not null,
 cod_operacao   char(01) not null
);

create index trans_apont_1054 on trans_apont_1054
(cod_empresa, num_processo);


create table sequencia_apo_1054 (
 cod_empresa     char(02) not null,
 num_processo    integer not null,
 num_seq_apont   integer not null,
 seq_apo_oper    integer not null,
 seq_apo_mestre  integer not null,
 PRIMARY KEY (cod_empresa, num_processo, num_seq_apont)
);


create table estorno_erro_1054 
  (
    cod_empresa  char(02) not null ,
    usuario      char(08) not null,
    dat_processo char(20) not null ,
    num_processo integer not null ,
    den_critica  char(80)
  );



create table item_alternat_1054 (
 cod_empresa     char(02) not null,
 tip_docum       char(01) not null, --O=Ordem P=Pedido
 num_docum       char(10) not null,
 cod_item        char(15) not null,
 item_alternat   char(15) not null,
 usuario         char(08) not null,
 dat_troca       date not null,
 hor_troca       char(08) not null,
 PRIMARY KEY (cod_empresa, num_docum, cod_item)
);


create table audit_alternat_1054 (
 cod_empresa     char(02) not null,
 num_docum       char(10) not null,
 num_ordem       integer not null,
 cod_item        char(15) not null,
 item_alternat   char(15) not null,
 usuario         char(08) not null,
 dat_troca       date not null,
 hor_troca       char(08) not null
);

create index audit_alternat_1054 on
audit_alternat_1054 (cod_empresa, num_docum, cod_item);


