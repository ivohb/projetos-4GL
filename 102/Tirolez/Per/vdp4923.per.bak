DATABASE FORMONLY

SCREEN
{
------------------------------------------------------------------------------
[f ]        SOLICITAÇÃO DE ORDEM DE MONTAGEM ENVIADO PELO COLETOR


    Todas empresas:[c]

         Pedido de:[a     ]  até : [b     ]

          Carteira:[d ]
}
END

ATTRIBUTES
a   = FORMONLY.pedido_de,     AUTONEXT;
b   = FORMONLY.pedido_ate,    AUTONEXT;
f   = FORMONLY.cod_empresa,   NOENTRY;
c   = FORMONLY.todas_empresas     TYPE CHAR, UPSHIFT,
      INCLUDE=('S','N'), COMMENTS='Selecionar todas as empresas? S/N '
      --#, widget='CHECK', config='S N { }';
d   = FORMONLY.cod_tip_carteira, UPSHIFT
      --# ,WIDGET='FIELD_BMP', CONFIG='combo.bmp Control-z';
e   = FORMONLY.den_tip_carteira, NOENTRY;
END
